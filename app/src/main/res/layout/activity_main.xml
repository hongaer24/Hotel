<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_tab_bar" />

    <RadioGroup
        android:id="@+id/rg_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/app_theme_org"
        android:orientation="horizontal"
        android:paddingTop="3dp">
        <RadioButton
            android:id="@+id/rb_message"
            style="@style/main_tab_radio_button"
            android:checked="true"
            android:drawableTop="@drawable/selector_tab_work"
            android:text="消息" />
        <RadioButton
            android:id="@+id/rb_work"
            style="@style/main_tab_radio_button"
            android:checked="true"
            android:drawableTop="@drawable/selector_tab_work"
            android:text="工作" />


        <RadioButton
            android:id="@+id/rb_room"
            style="@style/main_tab_radio_button"
            android:drawableTop="@drawable/selector_tab_room"
            android:text="房态" />

        <RadioButton
            android:id="@+id/rb_my"
            style="@style/main_tab_radio_button"
            android:drawableTop="@drawable/selector_tab_my"
            android:text="我的" />
    </RadioGroup>

</RelativeLayout>