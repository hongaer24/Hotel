<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.houno.hotel.home.activity.OpreationContitionActivity">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_theme_light_black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="运营概况"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <TextView
            android:id="@+id/tv_opentime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业时间"
            android:textColor="@color/light_blue"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="2018-02-01"
            android:textColor="@color/app_theme_light_black"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:background="@color/light_gray_txt">

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当日：1642"
            android:textColor="@color/black_txt"/>
        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="本月累计：500"
            android:paddingRight="10dp"
            android:textColor="@color/black_txt"/>
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="本年累计：600"
            android:textColor="@color/black_txt"/>

    </RelativeLayout>

    <GridView
        android:id="@+id/gv_room_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:horizontalSpacing="4px"
        android:numColumns="4"
        android:overScrollMode="never"
        android:verticalSpacing="4px"
        android:gravity="center"
        android:scrollbars="none" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e7e0e0" />
    <GridView
        android:id="@+id/gv_room_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:horizontalSpacing="20px"
        android:numColumns="3"
        android:overScrollMode="never"
        android:verticalSpacing="20px"
        android:gravity="center"
        android:scrollbars="none"
        android:padding="8dp"/>


</LinearLayout>
